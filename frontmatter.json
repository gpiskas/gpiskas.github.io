{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "previewPath": "posts",
      "path": "[[workspace]]/src/content/posts"
    },
    {
      "title": "projects",
      "previewPath": "projects",
      "path": "[[workspace]]/src/content/projects"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "post",
      "pageBundle": false,
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "pubDatetime",
          "name": "pubDatetime",
          "type": "datetime"
        },
        {
          "title": "modDatetime",
          "name": "modDatetime",
          "type": "datetime"
        },
        {
          "title": "featured",
          "name": "featured",
          "type": "boolean"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        }
      ]
    },
    {
      "name": "project",
      "pageBundle": false,
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "projectImage",
          "name": "projectImage",
          "type": "image"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "pubDatetime",
          "name": "pubDatetime",
          "type": "datetime"
        },
        {
          "title": "modDatetime",
          "name": "modDatetime",
          "type": "datetime"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        }
      ]
    }
  ]
}